{
  "name": "nyc-event-stager",
  "version": "1.0.0",
  "description": "A client-side tool for creating enhanced siteplans of public space events in NYC for permitting purposes",
  "author": "Your Name",
  "license": "MIT",
  "keywords": [
    "nyc",
    "urban-planning",
    "event-planning",
    "mapping",
    "gis",
    "civic-tech",
    "open-data"
  ],
  "homepage": "https://spacestager.nyc",
  "repository": {
    "type": "git",
    "url": "https://github.com/pendulating/space-stager.git"
  },
  "scripts": {
    "dev": "node scripts/copy-vendor.mjs && vite",
    "build": "node scripts/copy-vendor.mjs && vite build",
    "preview": "vite preview",
    "predeploy": "pnpm run build",
    "deploy": "gh-pages -d dist",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write \"src/**/*.{js,jsx,json,css,md}\"",
    "test:unit": "vitest run --coverage --passWithNoTests",
    "size": "size-limit",
    "postinstall": "node scripts/copy-vendor.mjs"
  },
  "dependencies": {
    "@mapbox/mapbox-gl-draw": "^1.4.3",
    "@stadiamaps/maplibre-search-box": "^2.0.0",
    "@turf/bbox": "^7.2.0",
    "@turf/turf": "^7.2.0",
    "jspdf": "^2.5.2",
    "jspdf-autotable": "^5.0.2",
    "lucide-react": "^0.294.0",
    "maplibre-gl": "^3.6.2",
    "proj4": "^2.19.10",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6"
  },
  "devDependencies": {
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/jsdom": "^21.1.6",
    "@types/mapbox__mapbox-gl-draw": "^1.4.6",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^2.0.5",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "gh-pages": "^6.3.0",
    "jsdom": "^24.1.0",
    "postcss": "^8.4.32",
    "prettier": "^3.1.1",
    "size-limit": "^11.1.6",
    "tailwindcss": "^3.3.6",
    "vite": "^5.0.8",
    "vitest": "^2.0.5"
  },
  "size-limit": [
    {
      "path": "dist/assets/*.js",
      "limit": "300 KB"
    }
  ],
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.12.1",
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2023": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:react-hooks/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2023,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "rules": {
      "react/prop-types": "off"
    }
  }
}